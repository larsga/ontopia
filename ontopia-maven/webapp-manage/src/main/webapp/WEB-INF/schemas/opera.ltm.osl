  <!-- *************************** TT: COMPOSER *************************** -->

  <topic id="composer" match="strict">

    <instanceOf>
      <subjectIndicatorRef href="http://psi.ontopia.net/music/composer"/>
    </instanceOf>
    <otherClass>
      <subjectIndicatorRef href="http://psi.ontopia.net/opera/librettist"/>
    </otherClass>

    <!-- BASE NAMES -->
    <!-- exactly one name in the unconstrained scope; well, two are OK if one is the fullname -->
    <baseName min="1" max="2">
      <scope></scope>
    </baseName>
    <!-- exactly one name of the type "normal" (typed names not supported by OSL) -->
<!--
    <baseName min="1" max="1">
    <instanceOf><subjectIndicatorRef href="http://psi.ontopia.net/basename/normal"/></instanceOf>
    </baseName>
-->
    <!-- exactly one name of in the scope "normal" -->
    <baseName min="1" max="1">
      <scope><subjectIndicatorRef href="http://psi.ontopia.net/basename/normal"/></scope>
    </baseName>
    <!-- exactly one name in the scope "shortname" -->
    <baseName min="1" max="1">
      <scope><subjectIndicatorRef href="http://psi.ontopia.net/basename/short-name"/></scope>
    </baseName>
    <!-- allow nom-de-plûmes -->
    <baseName>
      <scope><subjectIndicatorRef href="http://psi.ontopia.net/basename/nom-de-plume"/></scope>
    </baseName>
    <baseName>
      <scope>
        <subjectIndicatorRef href="http://psi.ontopia.net/basename/nom-de-plume"/>
        <subjectIndicatorRef href="http://psi.ontopia.net/basename/normal"/>
      </scope>
    </baseName>
    <baseName>
      <scope>
        <subjectIndicatorRef href="http://psi.ontopia.net/basename/nom-de-plume"/>
        <instanceOf>
          <subjectIndicatorRef href="http://psi.ontopia.net/music/opera"/>
        </instanceOf>
      </scope>
    </baseName>

    <!-- OCCURRENCES -->
    <!-- must have internal "born" occurrence -->
    <occurrence external="no" min="1" max="1">
      <instanceOf>
        <subjectIndicatorRef href="http://psi.ontopia.net/biography/date-of-birth"/>
      </instanceOf>
    </occurrence>
    <!-- must have internal "died" occurrence -->
    <occurrence external="no" min="1">
      <instanceOf>
        <subjectIndicatorRef href="http://psi.ontopia.net/biography/date-of-death"/>
      </instanceOf>
    </occurrence>
    <!-- must have external "illustration" occurrence -->
    <occurrence external="yes" min="1" max="1">
      <instanceOf>
        <subjectIndicatorRef href="http://psi.ontopia.net/opera/illustration"/>
      </instanceOf>
    </occurrence>
    <!-- can have "article" occurrences -->
    <occurrence external="yes">
      <instanceOf>
        <subjectIndicatorRef href="http://psi.ontopia.net/opera/article"/>
      </instanceOf>
      <scope>
        <instanceOf>
          <subjectIndicatorRef href="http://psi.ontopia.net/opera/network-location"/>
        </instanceOf>
        <instanceOf>
          <subjectIndicatorRef href="http://psi.ontopia.net/literature/publication"/>
        </instanceOf>
      </scope>
    </occurrence>
    <!-- can have "bio" occurrences -->
    <occurrence external="yes">
      <instanceOf>
        <subjectIndicatorRef href="http://psi.ontopia.net/biography/biographical-article"/>
      </instanceOf>
    </occurrence>
    <!-- can have "bibref" occurrences -->
    <occurrence external="no">
      <instanceOf>
        <subjectIndicatorRef href="http://psi.ontopia.net/opera/bibref"/>
      </instanceOf>
    </occurrence>
    <!-- can have "description" occurrences -->
    <occurrence internal="yes">
      <instanceOf>
        <subjectIndicatorRef href="http://psi.ontopia.net/occurrence/description"/>
      </instanceOf>
    </occurrence>
    <!-- can have "website" occurrences -->
    <occurrence external="yes">
      <instanceOf>
        <subjectIndicatorRef href="http://psi.ontopia.net/opera/website"/>
      </instanceOf>
    </occurrence>
    <!-- can have "webpage" occurrences -->
    <occurrence external="yes" min="1">
      <instanceOf>
        <subjectIndicatorRef href="http://psi.ontopia.net/opera/webpage"/>
      </instanceOf>
    </occurrence>
    <!-- can have "gallery" occurrences -->
    <occurrence external="yes">
      <instanceOf>
        <subjectIndicatorRef href="http://psi.ontopia.net/opera/gallery"/>
      </instanceOf>
    </occurrence>
    <!-- can have "sound-clip" occurrences -->
    <occurrence external="yes">
      <instanceOf>
        <subjectIndicatorRef href="http://psi.ontopia.net/music/sound-clip"/>
      </instanceOf>
    </occurrence>
    <!-- can have "note" occurrences -->
    <occurrence external="no">
      <instanceOf>
        <subjectIndicatorRef href="http://psi.ontopia.net/opera/note"/>
      </instanceOf>
    </occurrence>

    <!-- ROLES -->
    <!-- must play role of "person" in "born-in" association -->
    <playing min="1" max="1">
      <instanceOf>
        <subjectIndicatorRef href="http://psi.ontopia.net/person"/>
      </instanceOf>
      <in>
        <instanceOf>
          <subjectIndicatorRef href="http://psi.ontopia.net/biography/born-in"/>
        </instanceOf>
      </in>
    </playing>

    <!-- must play role of "person" in "died-in" association -->
    <playing min="1" max="1">
      <instanceOf>
        <subjectIndicatorRef href="http://psi.ontopia.net/person"/>
      </instanceOf>
      <in>
        <instanceOf>
          <subjectIndicatorRef href="http://psi.ontopia.net/biography/died-in"/>
        </instanceOf>
      </in>
    </playing>

    <!-- must play role of "composer" in "composed-by" association -->
    <playing min="1">
      <instanceOf>
        <subjectIndicatorRef href="http://psi.ontopia.net/music/composer"/>
      </instanceOf>
      <in>
        <instanceOf>
          <subjectIndicatorRef href="http://psi.ontopia.net/music/composed-by"/>
        </instanceOf>
      </in>
    </playing>

    <!-- may play role of "composer" in "completed-by" association -->
    <playing>
      <instanceOf>
        <subjectIndicatorRef href="http://psi.ontopia.net/music/composer"/>
      </instanceOf>
      <in>
        <instanceOf>
          <subjectIndicatorRef href="http://psi.ontopia.net/music/completed-by"/>
        </instanceOf>
      </in>
    </playing>

    <!-- may play role of "librettist" in "libretto-by" association -->
    <playing>
      <instanceOf>
        <subjectIndicatorRef href="http://psi.ontopia.net/opera/librettist"/>
      </instanceOf>
      <in>
        <instanceOf>
          <subjectIndicatorRef href="http://psi.ontopia.net/literature/libretto-by"/>
        </instanceOf>
      </in>
    </playing>

    <!-- may play role of "teacher" in "pupil-of" association -->
    <playing>
      <instanceOf>
        <subjectIndicatorRef href="http://psi.ontopia.net/biography/teacher"/>
      </instanceOf>
      <in>
        <instanceOf>
          <subjectIndicatorRef href="http://psi.ontopia.net/biography/pupil-of"/>
        </instanceOf>
      </in>
    </playing>

    <!-- may play role of "pupil" in "pupil-of" association -->
    <playing>
      <instanceOf>
        <subjectIndicatorRef href="http://psi.ontopia.net/biography/pupil"/>
      </instanceOf>
      <in>
        <instanceOf>
          <subjectIndicatorRef href="http://psi.ontopia.net/biography/pupil-of"/>
        </instanceOf>
      </in>
    </playing>

    <!-- may play role of "person" in "exponent-of" association -->
    <playing>
      <instanceOf>
        <subjectIndicatorRef href="http://psi.ontopia.net/person"/>
      </instanceOf>
      <in>
        <instanceOf>
          <subjectIndicatorRef href="http://psi.ontopia.net/biography/exponent-of"/>
        </instanceOf>
      </in>
    </playing>

  </topic>

  <!-- *************************** TT: LIBRETTIST *************************** -->

  <topic id="librettist" match="loose">

    <instanceOf>
      <subjectIndicatorRef href="http://psi.ontopia.net/opera/librettist"/>
    </instanceOf>
    <otherClass>
      <subjectIndicatorRef href="http://psi.ontopia.net/music/composer"/>
    </otherClass>
    <otherClass>
      <subjectIndicatorRef href="http://psi.ontopia.net/opera/producer"/>
    </otherClass>
    <otherClass>
      <subjectIndicatorRef href="http://psi.ontopia.net/literature/writer"/>
    </otherClass>
    <otherClass>
      <subjectIndicatorRef href="http://psi.ontopia.net/literature/playwright"/>
    </otherClass>

    <!-- BASE NAMES -->
    <!-- exactly one name in the unconstrained scope; well, two are OK if one is the fullname -->
    <baseName min="1" max="2">
      <scope></scope>
    </baseName>
    <!-- exactly one name of in the scope "normal" -->
    <baseName min="1" max="1">
      <scope><subjectIndicatorRef href="http://psi.ontopia.net/basename/normal"/></scope>
    </baseName>
    <!-- exactly one name in the scope "shortname" -->
    <baseName min="1" max="1">
      <scope><subjectIndicatorRef href="http://psi.ontopia.net/basename/short-name"/></scope>
    </baseName>

    <!-- OCCURRENCES -->
    <!-- must have internal "born" occurrence -->
    <!-- FIXME: Bug #557 Check if this bug is fixed. Following rule no longer commented out. -->
    <occurrence external="no" min="1" max="1">
      <instanceOf>
        <subjectIndicatorRef href="http://psi.ontopia.net/biography/date-of-birth"/>
      </instanceOf>
    </occurrence>
    <!-- must have internal "died" occurrence -->
    <occurrence external="no" min="1" max="1">
      <instanceOf>
        <subjectIndicatorRef href="http://psi.ontopia.net/biography/date-of-death"/>
      </instanceOf>
    </occurrence>

    <!-- ROLES -->
    <!-- must play role of "librettist" in "libretto-by" association -->
    <playing>
      <instanceOf>
        <subjectIndicatorRef href="http://psi.ontopia.net/opera/librettist"/>
      </instanceOf>
      <in>
        <instanceOf>
          <subjectIndicatorRef href="http://psi.ontopia.net/literature/libretto-by"/>
        </instanceOf>
      </in>
    </playing>
    <!-- must play role of "person" in "born-in" association -->
    <playing min="1" max="1">
      <instanceOf>
        <subjectIndicatorRef href="http://psi.ontopia.net/person"/>
      </instanceOf>
      <in>
        <instanceOf>
          <subjectIndicatorRef href="http://psi.ontopia.net/biography/born-in"/>
        </instanceOf>
      </in>
    </playing>
    <!-- must play role of "person" in "died-in" association -->
    <playing min="1" max="1">
      <instanceOf>
        <subjectIndicatorRef href="http://psi.ontopia.net/person"/>
      </instanceOf>
      <in>
        <instanceOf>
          <subjectIndicatorRef href="http://psi.ontopia.net/biography/died-in"/>
        </instanceOf>
      </in>
    </playing>

  </topic>

  <!-- *************************** TT: WRITER ******************************* -->

  <topic id="writer" match="loose">

    <instanceOf>
      <subjectIndicatorRef href="http://psi.ontopia.net/literature/writer"/>
    </instanceOf>
    <otherClass>
      <subjectIndicatorRef href="http://psi.ontopia.net/music/composer"/>
    </otherClass>
    <otherClass>
      <subjectIndicatorRef href="http://psi.ontopia.net/opera/producer"/>
    </otherClass>
    <otherClass>
      <subjectIndicatorRef href="http://psi.ontopia.net/literature/writer"/>
    </otherClass>
    <otherClass>
      <subjectIndicatorRef href="http://psi.ontopia.net/literature/playwright"/>
    </otherClass>

    <!-- BASE NAMES -->
    <!-- exactly one name in the unconstrained scope; well, two are OK if one is the fullname -->
    <baseName min="1" max="2">
      <scope></scope>
    </baseName>
    <!-- exactly one name of in the scope "normal" -->
    <baseName min="1" max="1">
      <scope><subjectIndicatorRef href="http://psi.ontopia.net/basename/normal"/></scope>
    </baseName>
    <!-- exactly one name in the scope "shortname" -->
    <baseName min="1" max="1">
      <scope><subjectIndicatorRef href="http://psi.ontopia.net/basename/short-name"/></scope>
    </baseName>

    <!-- OCCURRENCES -->
    <!-- must have internal "born" occurrence -->
    <occurrence external="no" min="1" max="1">
      <instanceOf>
        <subjectIndicatorRef href="http://psi.ontopia.net/biography/date-of-birth"/>
      </instanceOf>
    </occurrence>
    <!-- must have internal "died" occurrence -->
    <occurrence external="no" min="1" max="1">
      <instanceOf>
        <subjectIndicatorRef href="http://psi.ontopia.net/biography/date-of-death"/>
      </instanceOf>
    </occurrence>

    <!-- ROLES -->
    <!-- must play role of "person" in "born-in" association -->
    <playing min="1" max="1">
      <instanceOf>
        <subjectIndicatorRef href="http://psi.ontopia.net/person"/>
      </instanceOf>
      <in>
        <instanceOf>
          <subjectIndicatorRef href="http://psi.ontopia.net/biography/born-in"/>
        </instanceOf>
      </in>
    </playing>
    <!-- must play role of "person" in "died-in" association -->
    <playing min="1" max="1">
      <instanceOf>
        <subjectIndicatorRef href="http://psi.ontopia.net/person"/>
      </instanceOf>
      <in>
        <instanceOf>
          <subjectIndicatorRef href="http://psi.ontopia.net/biography/died-in"/>
        </instanceOf>
      </in>
    </playing>

  </topic>

  <!-- **************************** TT: OPERA **************************** -->
  <topic id="opera" match="strict">

    <instanceOf>
      <subjectIndicatorRef href="http://psi.ontopia.net/music/opera"/>
    </instanceOf>

    <!-- BASE NAMES -->
    <!-- exactly one name in the unconstrained scope -->
    <baseName min="1" max="1">
      <scope></scope>
    </baseName>
    <!-- may have one name in the scope "shortname" -->
    <baseName>
      <scope><subjectIndicatorRef href="http://psi.ontopia.net/basename/short-name"/></scope>
    </baseName>
    <!-- may have names in the scope of a topic of type "language" -->
    <baseName>
      <scope>
        <instanceOf>
          <subjectIndicatorRef href="http://psi.ontopia.net/opera/language"/>
        </instanceOf>
      </scope>
    </baseName>
    <!-- may have names in the scope "original-name" -->
    <baseName>
      <scope><subjectIndicatorRef href="http://psi.ontopia.net/basename/original-name"/></scope>
    </baseName>
    <!-- may have one name in the scope of a topic of type "composer" -->
    <baseName max="1">
      <scope>
        <instanceOf>
          <subjectIndicatorRef href="http://psi.ontopia.net/music/composer"/>
        </instanceOf>
      </scope>
    </baseName>
    <!-- may have one short name in the scope of a topic of type "composer" -->
    <baseName max="1">
      <scope>
        <instanceOf>
          <subjectIndicatorRef href="http://psi.ontopia.net/music/composer"/>
        </instanceOf>
        <subjectIndicatorRef href="http://psi.ontopia.net/basename/short-name"/>
      </scope>
    </baseName>
    <!-- may have names in the scope "altname" -->
    <baseName>
      <scope><subjectIndicatorRef href="http://psi.ontopia.net/basename/alternative-name"/></scope>
    </baseName>

    <!-- OCCURRENCES -->
    <!-- must have internal "premiere-date" occurrence -->
    <occurrence external="no" min="1" max="1">
      <instanceOf>
        <subjectIndicatorRef href="http://psi.ontopia.net/opera/premiere-date"/>
      </instanceOf>
    </occurrence>
    <!-- may have external "libretto" occurrence -->
    <occurrence external="yes" max="2">
      <instanceOf>
        <subjectIndicatorRef href="http://psi.ontopia.net/opera/libretto"/>
      </instanceOf>
    </occurrence>
    <!-- can have "webpage" occurrences -->
    <occurrence external="yes">
      <instanceOf>
        <subjectIndicatorRef href="http://psi.ontopia.net/opera/webpage"/>
      </instanceOf>
    </occurrence>
    <!-- can have "bibref" occurrences -->
    <occurrence external="no">
      <instanceOf>
        <subjectIndicatorRef href="http://psi.ontopia.net/opera/bibref"/>
      </instanceOf>
    </occurrence>
    <!-- can have "note" occurrences -->
    <occurrence external="no">
      <instanceOf>
        <subjectIndicatorRef href="http://psi.ontopia.net/opera/note"/>
      </instanceOf>
    </occurrence>
    <!-- can have "description" occurrences -->
    <occurrence internal="yes">
      <instanceOf>
        <subjectIndicatorRef href="http://psi.ontopia.net/occurrence/description"/>
      </instanceOf>
    </occurrence>
    <!-- can have "synopsis" occurrences -->
    <occurrence external="yes">
      <instanceOf subclasses="yes">
        <subjectIndicatorRef href="http://psi.ontopia.net/opera/synopsis"/>
      </instanceOf>
    </occurrence>
    <!-- can have "illustration" occurrences -->
    <occurrence external="yes">
      <instanceOf subclasses="yes">
        <subjectIndicatorRef href="http://psi.ontopia.net/opera/illustration"/>
      </instanceOf>
    </occurrence>
    <!-- can have "audio recording" occurrences -->
    <occurrence internal="yes">
      <instanceOf>
        <subjectIndicatorRef href="http://psi.ontopia.net/music/audio-recording"/>
      </instanceOf>
    </occurrence>
    <!-- can have "video recording" occurrences -->
    <occurrence internal="yes">
      <instanceOf>
        <subjectIndicatorRef href="http://psi.ontopia.net/music/video-recording"/>
      </instanceOf>
    </occurrence>
    <!-- can have "poster" occurrences -->
    <occurrence external="yes">
      <instanceOf subclasses="yes">
        <subjectIndicatorRef href="http://psi.ontopia.net/opera/poster"/>
      </instanceOf>
    </occurrence>
    <!-- can have "gallery" occurrences -->
    <occurrence external="yes">
      <instanceOf subclasses="yes">
        <subjectIndicatorRef href="http://psi.ontopia.net/opera/gallery"/>
      </instanceOf>
    </occurrence>
    <!-- can have "article" occurrences -->
    <occurrence external="yes">
      <instanceOf>
        <subjectIndicatorRef href="http://psi.ontopia.net/opera/article"/>
      </instanceOf>
      <scope>
        <instanceOf>
          <subjectIndicatorRef href="http://psi.ontopia.net/opera/network-location"/>
        </instanceOf>
        <instanceOf>
          <subjectIndicatorRef href="http://psi.ontopia.net/literature/publication"/>
        </instanceOf>
      </scope>
    </occurrence>
    <!-- can have "sound-clip" occurrences -->
    <occurrence external="yes">
      <instanceOf subclasses="yes">
        <subjectIndicatorRef href="http://psi.ontopia.net/music/sound-clip"/>
      </instanceOf>
    </occurrence>

    <!-- ROLES -->
    <!-- MUST play role of "opera" in "composed-by" association -->
    <playing min="1" max="2">
      <instanceOf>
        <subjectIndicatorRef href="http://psi.ontopia.net/literature/work"/>
      </instanceOf>
      <in>
        <instanceOf>
          <subjectIndicatorRef href="http://psi.ontopia.net/music/composed-by"/>
        </instanceOf>
      </in>
    </playing>

    <!-- may play role of "opera" in "completed-by" association -->
    <playing>
      <instanceOf>
        <subjectIndicatorRef href="http://psi.ontopia.net/literature/work"/>
      </instanceOf>
      <in>
        <instanceOf>
          <subjectIndicatorRef href="http://psi.ontopia.net/music/completed-by"/>
        </instanceOf>
      </in>
    </playing>

    <!-- MAY play role of "opera" in "libretto-by" association -->
<!-- FIXME: librettist unknown for following 23 operas:
select $COMPOSER, $OPERA from
composed-by( $OPERA : work, $COMPOSER : composer),
not(libretto-by( $OPERA : opera, $LIBRETTIST : librettist))
order by $COMPOSER?
-->
    <playing min="0">
      <instanceOf>
        <subjectIndicatorRef href="http://psi.ontopia.net/music/opera"/>
      </instanceOf>
      <in>
        <instanceOf>
          <subjectIndicatorRef href="http://psi.ontopia.net/literature/libretto-by"/>
        </instanceOf>
      </in>
    </playing>

    <!-- may play role of "result" in "based-on" association -->
    <playing>
      <instanceOf>
        <subjectIndicatorRef href="http://psi.ontopia.net/opera/result"/>
      </instanceOf>
      <in>
        <instanceOf>
          <subjectIndicatorRef href="http://psi.ontopia.net/opera/based-on"/>
        </instanceOf>
      </in>
    </playing>

    <!-- may play role of "result" in "revision-of" association -->
    <playing>
      <instanceOf>
        <subjectIndicatorRef href="http://psi.ontopia.net/opera/result"/>
      </instanceOf>
      <in>
        <instanceOf>
          <subjectIndicatorRef href="http://psi.ontopia.net/opera/revision-of"/>
        </instanceOf>
      </in>
    </playing>

    <!-- may play role of "source" in "revision-of" association -->
    <playing>
      <instanceOf>
        <subjectIndicatorRef href="http://psi.ontopia.net/opera/source"/>
      </instanceOf>
      <in>
        <instanceOf>
          <subjectIndicatorRef href="http://psi.ontopia.net/opera/revision-of"/>
        </instanceOf>
      </in>
    </playing>

    <!-- may play role of "work" in "premiere" association -->
    <playing min="0" max="10">
      <instanceOf>
        <subjectIndicatorRef href="http://psi.ontopia.net/literature/work"/>
      </instanceOf>
      <in>
        <instanceOf>
          <subjectIndicatorRef href="http://psi.ontopia.net/opera/premiere"/>
        </instanceOf>
      </in>
    </playing>

    <!-- may play role of "opera" in up to five "takes-place-in" associations -->
    <playing max="5">
      <instanceOf>
        <subjectIndicatorRef href="http://psi.ontopia.net/music/opera"/>
      </instanceOf>
      <in>
        <instanceOf>
          <subjectIndicatorRef href="http://psi.ontopia.net/opera/takes-place-in"/>
        </instanceOf>
      </in>
    </playing>

    <!-- may play role of "opera" in "takes-place-during" association -->
    <playing>
      <instanceOf>
        <subjectIndicatorRef href="http://psi.ontopia.net/music/opera"/>
      </instanceOf>
      <in>
        <instanceOf>
          <subjectIndicatorRef href="http://psi.ontopia.net/opera/takes-place-during"/>
        </instanceOf>
      </in>
    </playing>

<!-- FIXME: character list not captured for following operas:
select $COMPOSER, $OPERA from
composed-by( $OPERA : opera, $COMPOSER : composer),
not(appears-in($OPERA : work, $B : character))
order by $COMPOSER, $OPERA?
-->
    <!-- may play role of "work" in "appears-in" association -->
    <playing><!-- min="1"-->
      <instanceOf>
        <subjectIndicatorRef href="http://psi.ontopia.net/literature/work"/>
      </instanceOf>
      <in>
        <instanceOf>
          <subjectIndicatorRef href="http://psi.ontopia.net/literature/appears-in"/>
        </instanceOf>
      </in>
    </playing>

    <!-- may play role of "opera" in "character-dies" association -->
    <playing>
      <instanceOf>
        <subjectIndicatorRef href="http://psi.ontopia.net/music/opera"/>
      </instanceOf>
      <in>
        <instanceOf>
          <subjectIndicatorRef href="http://psi.ontopia.net/opera/killed-by"/>
        </instanceOf>
      </in>
    </playing>

    <!-- may play role of "work" in "published-by" association -->
    <playing>
      <instanceOf>
        <subjectIndicatorRef href="http://psi.ontopia.net/literature/work"/>
      </instanceOf>
      <in>
        <instanceOf>
          <subjectIndicatorRef href="http://psi.ontopia.net/literature/published-by"/>
        </instanceOf>
      </in>
    </playing>

    <!-- may play role of "part" in "part-of" association -->
    <playing>
      <instanceOf>
        <subjectIndicatorRef href="http://psi.ontopia.net/opera/part"/>
      </instanceOf>
      <in>
        <instanceOf>
          <subjectIndicatorRef href="http://psi.ontopia.net/opera/part-of"/>
        </instanceOf>
      </in>
    </playing>

    <!-- may play role of "whole" in "part-of" association -->
    <playing>
      <instanceOf>
        <subjectIndicatorRef href="http://psi.ontopia.net/opera/whole"/>
      </instanceOf>
