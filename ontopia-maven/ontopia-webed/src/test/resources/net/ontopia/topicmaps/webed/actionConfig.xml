    <class shortcut="ActionAssociationRemoveType"
           fullname="net.ontopia.topicmaps.webed.impl.actions.tmobject.RemoveType"/>
    <class shortcut="ActionAssociationAddTheme"
           fullname="net.ontopia.topicmaps.webed.impl.actions.tmobject.AddTheme"/>
    <class shortcut="ActionAssociationRemoveTheme"
           fullname="net.ontopia.topicmaps.webed.impl.actions.tmobject.RemoveTheme"/>
    <class shortcut="ActionAssociationAddRole"
           fullname="net.ontopia.topicmaps.webed.impl.actions.assocrole.AddRole"/>
    <class shortcut="ActionAssociationRemoveRole"
           fullname="net.ontopia.topicmaps.webed.impl.actions.assocrole.RemoveRole"/>
