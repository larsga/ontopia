           fullname="net.ontopia.topicmaps.webed.impl.actions.tmobject.Delete"/>

    <!-- OmniEditor-specific action -->
    <class shortcut="SetActionGroup"
           fullname="net.ontopia.topicmaps.webed.webapps.omnieditor.SetActionGroup"/>

    <!-- ParamRuleIF implementations -->
    <class shortcut="add2ChooseRule"
           fullname="net.ontopia.topicmaps.webed.webapps.omnieditor.ParamRuleChoose2Add"/>
    <class shortcut="editAssocRule"
           fullname="net.ontopia.topicmaps.webed.webapps.omnieditor.ParamRuleEditAssoc"/>
    <class shortcut="showAG"
           fullname="net.ontopia.topicmaps.webed.webapps.omnieditor.ShowActionGroupParamRule"/>

  </classMap>


  <!--
      ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
      Global Mapping between image short name and image properties
      like location and dimension used by action buttons.
      ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
  -->
  <buttonMap>
    <!-- images for adding one entry -->
    <image name="add_one_s" src="/images/add_one-halfsize.gif"
           width="10" height="10"/>
    <image name="add_one_s_grey" src="/images/add_one-halfsize-grey.gif"
           width="10" height="10"/>
    <image name="add_one_m" src="/images/add_one-16x16.gif"
           width="16" height="16"/>
    <image name="add_one_l" src="/images/add_one.gif"
           width="20" height="20"/>
    <!-- images for editing one entry -->
    <image name="edit_one_s" src="/images/edit_one-halfsize.gif"
           width="10" height="10"/>
    <image name="edit_one_m" src="/images/edit_one-16x16.gif"
           width="16" height="16"/>
    <image name="edit_one_l" src="/images/edit_one.gif"
           width="20" height="20"/>
    <!-- images for removing one entry -->
    <image name="remove_one_s" src="/images/remove_one-halfsize.gif"
           width="10" height="10"/>
    <image name="remove_one_m" src="/images/remove_one-16x16.gif"
           width="16" height="16"/>
    <image name="remove_one_l" src="/images/remove_one.gif"
           width="20" height="20"/>
    <!-- diverse images -->
    <image name="entry_ok" src="/images/entry_ok.gif"
           width="20" height="20"/>
    <image name="entry_delete" src="/images/entry_delete.gif"
           width="20" height="20"/>
    <image name="binocular" src="/images/binocular-16x16.gif"
           width="16" height="20"/>
  </buttonMap>


  <!--
      ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
       Global Mapping between field short name and field properties
       like type and dimension used by action fields.
      ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~  
  -->
  <fieldMap>
    <field name="tfs" type="text" columns="39" maxlength="255"/>
    <field name="tfm" type="text" columns="50" maxlength="255"/>
    <field name="tfl" type="textarea" columns="50" rows="3"/>
  </fieldMap>



  <!--
      ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
      Global Forward Definitions,
      used for an action if no explicitly defined forward exists.
      ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
  -->
  <globalForwards>
    <forward name="defaultForwardTopic"
             path="topic_edit.jsp"
             frame="edit" />
    <forward name="switchTopicTabForward"
             path="topic_edit.jsp"
             frame="edit"
             paramRule="showAG">
    </forward>
    <forward name="defaultForwardAssoc"
             path="assoc_edit.jsp"
             frame="edit" />
    <forward name="displayTMOverview"
             path="topicmap_edit.jsp"
             frame="edit" />
  </globalForwards>

  <!--
      ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
      Action Group for covering the modifications of the topic types,
      subject indicators and source locators of a topic object.
      ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
  -->
  <actionGroup name="topicEditProps">
    
    <!-- actions related to form input fields -->
    <inputField name="setSubjInd"
                class="ActionTopicSetSubjectIndicator"/>
    <inputField name="setSourceLoc"
                class="ActionTopicSetSourceLocator"/>
    
    <!-- principal actions -->
    <action name="submitSubjIndsSourceLocs"
            class="DefaultAction"/>
    <action name="leaveTab"
            class="SetActionGroup"/>
    <action name="chooseType"
            class="DeferredAction"/>
    <action name="addType"
            class="ActionTopicAddType"/>
    <action name="removeType"
            class="ActionTopicRemoveType"/>
    <action name="addSubjInd"
            class="ActionTopicAddSubjectIndicator"/>
    <action name="removeSubjInd"
            class="ActionTopicRemoveSubjectIndicator"/>
    <action name="addSourceLoc"
            class="ActionTopicAddSourceLocator"/>
    <action name="removeSourceLoc"
            class="ActionTopicRemoveSourceLocator"/>

    <!-- Define forward pages special to this action group -->
    <forward name="chooseTypeForward"
             path="search.jsp"
             frame="search"
             nextAction="addType"
             paramRule="add2ChooseRule">
      <reqParam name="searchContext" value="topicTypes"/>
    </forward>

    <!-- Define forward rules -->
    <forwardRules>
      <forwardDefault forward="defaultForwardTopic"/>
      <forwardRule action="chooseType"
                   forward="chooseTypeForward"/>
      <forwardRule action="leaveTab"
                   forward="switchTopicTabForward"/>
    </forwardRules>

  </actionGroup>



  <!--
      ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
      Action Group for modification of the base names and variant names.
      ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
  -->
  <actionGroup name="topicEditNames">
    
    <!-- actions related to form input fields -->
    <inputField name="setBasename"
                class="ActionTopicSetBasename"/>
    <inputField name="setVariant"
                class="ActionTopicSetVariant"/>
    
    <!-- principal actions -->
    <action name="submitBasenamesVariants"
            class="DefaultAction"/>
    <action name="leaveTab"
            class="SetActionGroup"/>
    <action name="addBasename"
            class="ActionTopicAddBasename"/>
    <action name="removeBasename"
            class="ActionTopicRemoveBasename"/>
    <action name="chooseBasenameTheme"
            class="DeferredAction"/>
    <action name="addBasenameTheme"
            class="ActionTopicAddBasenameTheme"/>
    <action name="removeBasenameTheme"
            class="ActionTopicRemoveBasenameTheme"/>

    <action name="addVariant"
            class="ActionTopicAddVariant"/>
    <action name="removeVariant"
            class="ActionTopicRemoveVariant"/>
    <action name="chooseVariantTheme"
            class="DeferredAction"/>
    <action name="addVariantTheme"
            class="ActionTopicAddVariantTheme"/>
    <action name="removeVariantTheme"
            class="ActionTopicRemoveVariantTheme"/>


    <!-- Define forward pages special to this action group -->
    <forward name="chooseBasenameThemeForward"
             path="search.jsp"
             frame="search"
             nextAction="addBasenameTheme"
             paramRule="add2ChooseRule">
      <reqParam name="searchContext" value="basenameThemes"/>
    </forward>
    <forward name="chooseVariantThemeForward"
             path="search.jsp"
             frame="search"
             nextAction="addVariantTheme"
             paramRule="add2ChooseRule">
      <reqParam name="searchContext" value="variantThemes"/>
    </forward>

    <!-- Define forward rules -->
    <forwardRules>
      <forwardDefault forward="defaultForwardTopic"/>
      <forwardLocked path="locked.jsp" frame="search"/>
      <forwardRule action="chooseBasenameTheme"
                   forward="chooseBasenameThemeForward"/>
      <forwardRule action="chooseVariantTheme"
                   forward="chooseVariantThemeForward"/>
      <forwardRule action="leaveTab"
                   forward="switchTopicTabForward"/>
    </forwardRules>

  </actionGroup>


  <!--
      ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
      Action Group for modification of the internal occurrences.
      ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
  -->
  <actionGroup name="topicEditIntOccs">
    
    <!-- actions related to form input fields -->
    <inputField name="setIntOccurrence"
                class="ActionTopicSetIntOccurrence"/>
    
    <!-- principal actions -->
    <action name="submitIntOccs"
            class="DefaultAction"/>
    <action name="leaveTab"
            class="SetActionGroup"/>
    <action name="addIntOccurrence"
            class="ActionTopicAddIntOccurrence"/>
    <action name="removeOccurrence"
            class="ActionTopicRemoveOccurrence"/>
    <action name="chooseOccurrenceType"
            class="DeferredAction"/>
    <action name="addOccurrenceType"
            class="ActionTopicAddOccurrenceType"/>
    <action name="removeOccurrenceType"
            class="ActionTopicRemoveOccurrenceType"/>
    <action name="chooseOccurrenceTheme"
            class="DeferredAction"/>
    <action name="addOccurrenceTheme"
            class="ActionTopicAddOccurrenceTheme"/>
    <action name="removeOccurrenceTheme"
            class="ActionTopicRemoveOccurrenceTheme"/>
    
    <!-- Define forward pages special to this action group -->
    <forward name="chooseOccurrenceTypeForward"
             path="search.jsp"
             frame="search"
             nextAction="addOccurrenceType"
             paramRule="add2ChooseRule">
      <reqParam name="searchContext" value="occTypes"/>
    </forward>
    <forward name="chooseOccurrenceThemeForward"
             path="search.jsp"
             frame="search"
             nextAction="addOccurrenceTheme"
             paramRule="add2ChooseRule">
      <reqParam name="searchContext" value="occThemes"/>
    </forward>
    
    <!-- Define forward rules -->
    <forwardRules>
      <forwardDefault forward="defaultForwardTopic"/>
      <forwardRule action="chooseOccurrenceType"
                   forward="chooseOccurrenceTypeForward"/>
      <forwardRule action="chooseOccurrenceTheme"
                   forward="chooseOccurrenceThemeForward"/>
      <forwardRule action="leaveTab"
                   forward="switchTopicTabForward"/>
    </forwardRules>

  </actionGroup>


  <!--
      ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
      Action Group for modification of the external occurrences.
      ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
  -->
  <actionGroup name="topicEditExtOccs">
    
    <!-- actions related to form input fields -->
    <inputField name="setExtOccurrence"
                class="ActionTopicSetExtOccurrence"/>
    
    <!-- principal actions -->
    <action name="submitExtOccs"
            class="DefaultAction"/>
    <action name="leaveTab"
            class="SetActionGroup"/>
    <action name="addExtOccurrence"
            class="ActionTopicAddExtOccurrence"/>
    <action name="removeExtOccurrence"
            class="ActionTopicRemoveOccurrence"/>
    <action name="chooseExtOccurrenceType"
            class="DeferredAction"/>
    <action name="addExtOccurrenceType"
            class="ActionTopicAddOccurrenceType"/>
    <action name="removeExtOccurrenceType"
            class="ActionTopicRemoveOccurrenceType"/>
    <action name="chooseExtOccurrenceTheme"
            class="DeferredAction"/>
    <action name="addExtOccurrenceTheme"
            class="ActionTopicAddOccurrenceTheme"/>
    <action name="removeExtOccurrenceTheme"
            class="ActionTopicRemoveOccurrenceTheme"/>
    
    <!-- Define forward pages special to this action group -->
    <forward name="chooseExtOccurrenceTypeForward"
             path="search.jsp"
             frame="search"
             nextAction="addExtOccurrenceType"
             paramRule="add2ChooseRule">
      <reqParam name="searchContext" value="occTypes"/>
    </forward>
    <forward name="chooseExtOccurrenceThemeForward"
             path="search.jsp"
             frame="search"
             nextAction="addExtOccurrenceTheme"
             paramRule="add2ChooseRule">
      <reqParam name="searchContext" value="occThemes"/>
    </forward>
    
    <!-- Define forward rules -->
    <forwardRules>
      <forwardDefault forward="defaultForwardTopic"/>
      <forwardRule action="chooseExtOccurrenceType"
                   forward="chooseExtOccurrenceTypeForward"/>
      <forwardRule action="chooseExtOccurrenceTheme"
                   forward="chooseExtOccurrenceThemeForward"/>
      <forwardRule action="leaveTab"
                   forward="switchTopicTabForward"/>      
    </forwardRules>

  </actionGroup>

  
  <!--
      ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
      Action Group for linking to associations from a given topic.
      ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
  -->
  <actionGroup name="topicEditAssocs">
    
    <!-- principal actions -->
    <action name="createAssocWithPlayer"
            class="ActionTopicMapCreateAssoc"/>
    <action name="leaveTab"
            class="SetActionGroup"/>
    
    <!-- Define forward rules -->
    <forwardRules>
      <forwardDefault forward="defaultForwardTopic"/>
      <forwardRule action="createAssocWithPlayer"
                   forward="defaultForwardAssoc"/>
      <forwardRule action="leaveTab"
                   forward="switchTopicTabForward"/>      
    </forwardRules>
    
  </actionGroup>

  
  <!--
      ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
      Action Group for modifying an association.
      ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
  -->
  <actionGroup name="assocEdit">
    
    <!-- principal actions -->
    <action name="assocChooseType"
            class="DeferredAction"/>
    <action name="assocAddType"
            class="ActionAssociationAddType"/>
    <action name="assocRemoveType"
            class="ActionAssociationRemoveType"/>
    <action name="assocChooseTheme"
            class="DeferredAction"/>
    <action name="assocAddTheme"
            class="ActionAssociationAddTheme"/>
    <action name="assocRemoveTheme"
            class="ActionAssociationRemoveTheme"/>
    <action name="assocChoosePlayer"
            class="DeferredAction"/>
    <action name="assocAddRole"
            class="ActionAssociationAddRole"/>
    <action name="assocRemoveRole"
            class="ActionAssociationRemoveRole"/>
    <action name="assocChooseRoleType"
            class="DeferredAction"/>
    <action name="assocAddRoleType"
            class="ActionAssociationAddRoleType"/>
    <action name="assocRemoveRoleType"
            class="ActionAssociationRemoveRoleType"/>
    
    <!-- Define forward pages special to this action group -->
    <forward name="assocChooseTypeForward"
             path="search.jsp"
             frame="search"
             nextAction="assocAddType"
             paramRule="add2ChooseRule">
      <reqParam name="searchContext" value="assocTypes"/>
    </forward>
    <forward name="assocChooseThemeForward"
             path="search.jsp"
             frame="search"
             nextAction="assocAddTheme"
             paramRule="add2ChooseRule">
      <reqParam name="searchContext" value="assocThemes"/>
    </forward>
    <forward name="assocChoosePlayerForward"
             path="search.jsp"
             frame="search"
             nextAction="assocAddRole"
             paramRule="add2ChooseRule">
      <reqParam name="lookup_method" value="role_type"/>
      <reqParam name="lookup_for"/>
      <reqParam name="search" value="1"/>
      <reqParam name="disp_search_form" value="off"/>
      <reqParam name="searchContext" value="assocPlayer"/>
    </forward>
    <forward name="assocChooseRoleTypeForward"
             path="search.jsp"
             frame="search"
             nextAction="assocAddRoleType"
             paramRule="add2ChooseRule">
      <reqParam name="searchContext" value="assocRoleTypes"/>
    </forward>
    
    <!-- Define forward rules -->
    <forwardRules>
      <forwardDefault forward="defaultForwardAssoc"/>
      <forwardRule action="assocChooseType"
                   forward="assocChooseTypeForward"/>
      <forwardRule action="assocChooseTheme"
                   forward="assocChooseThemeForward"/>
      <forwardRule action="assocChoosePlayer"
                   forward="assocChoosePlayerForward"/>
      <forwardRule action="assocChooseRoleType"
                   forward="assocChooseRoleTypeForward"/>
    </forwardRules>
    
  </actionGroup>


  <!--
      ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
      Action Group for creating new topics and associations.
      ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
  -->
  <actionGroup name="tmEdit">

    <!-- drop-down lists -->
    <inputField name="createTopic"
                class="ActionTopicMapCreateTopic"/>

    <!-- principal actions -->
    <action name="createTopicButton"
            class="DefaultAction"/>
    <action name="deleteTopic"
            class="ActionTopicDelete"/>
    <action name="createAssoc"
            class="ActionTopicMapCreateAssoc"/>
    <action name="deleteAssoc"
            class="ActionAssociationDelete"/>
    
    <!-- Define forward rules -->
    <forwardRules>
      <forwardDefault forward="defaultForwardTopic"/>
      <forwardRule action="createTopicButton"
                   forward="defaultForwardTopic"/>
      <forwardRule action="deleteTopic"
                   forward="displayTMOverview"/>
      <forwardRule action="createAssoc"
                   forward="defaultForwardAssoc"/>
      <forwardRule action="deleteAssoc"
                   forward="displayTMOverview"/>
    </forwardRules>
    
  </actionGroup>
  
</actionConfig>
