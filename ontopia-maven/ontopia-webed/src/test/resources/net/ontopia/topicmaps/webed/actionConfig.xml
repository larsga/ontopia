           fullname="net.ontopia.topicmaps.webed.impl.actions.topicmap.CreateAssoc"/>
    <!-- action for deleting a topic -->
    <class shortcut="ActionTopicDelete"
           fullname="net.ontopia.topicmaps.webed.impl.actions.tmobject.Delete"/>
