<project>
	<modelVersion>4.0.0</modelVersion>
	<name>Ontopoly EAR</name>
	<groupId>net.ontopia.ontopoly</groupId>
	<artifactId>ontopoly_ear</artifactId>
	<packaging>ear</packaging>
	<version>5.0.0</version>

	<dependencies>
		<dependency>
			<groupId>net.ontopia.ontopoly</groupId>
			<artifactId>ontopoly_war</artifactId>
			<version>5.0.0</version>
			<type>war</type>
			<scope>compile</scope> 
		</dependency>
	</dependencies>
	<build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-ear-plugin</artifactId>
        <configuration>
          <displayName>Ontopoly EAR</displayName>
          <modules>
            <webModule>
              <groupId>net.ontopia.ontopoly</groupId>
              <artifactId>ontopoly_war</artifactId>
              <contextRoot>/ontopoly</contextRoot>
              <bundleFileName>ontopoly.war</bundleFileName>
            </webModule>
          </modules>
        </configuration>
      </plugin>
    </plugins> 
	</build>
</project>
