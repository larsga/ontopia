<?xml version="1.0" encoding="UTF-8"?>
<project>
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<artifactId>ontopia-parent</artifactId>
		<groupId>net.ontopia.maven</groupId>
		<version>5.2.0-SNAPSHOT</version>
	</parent>

	<artifactId>ontopia-viz</artifactId>
	<packaging>jar</packaging>
	<name>Ontopia Vizigator</name>
	<description>Ontopia Vizigator.</description>

	<dependencies>
		<dependency>
			<groupId>net.ontopia.maven</groupId>
			<artifactId>ontopia-core</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>net.ontopia.maven</groupId>
			<artifactId>ontopia-test-bootstrap</artifactId>
			<version>${project.version}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>net.ontopia.maven</groupId>
			<artifactId>ontopia-navigator</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>com.touchgraph</groupId>
			<artifactId>touchgraph</artifactId>
			<version>unknown</version>
		</dependency>
	</dependencies>

	<build>
		<sourceDirectory>../../../ontopia/src/</sourceDirectory>
		<testSourceDirectory>../../../ontopia/src/</testSourceDirectory>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<version>2.0.2</version>
					<configuration>
						<source>1.5</source>
						<target>1.5</target>
						<includes>

						  	<!--patternset id="sources.viz"-->
						    <include>**/net/ontopia/topicmaps/viz/*.java</include>

						</includes>
						<testIncludes>

						  	<!--patternset id="sources.test.viz"-->
						    <include>**/net/ontopia/topicmaps/viz/test/*.java</include>

						</testIncludes>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-surefire-plugin</artifactId>
					<configuration>
						<argLine>-Dnet.ontopia.test.root=../test-data</argLine>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

</project>
