<topicMap id="xtm-language"
   xmlns="http://www.topicmaps.org/xtm/1.0/"
   xmlns:xlink='http://www.w3.org/1999/xlink'> 

  <topic id="country">
    <subjectIdentity>
      <subjectIndicatorRef xlink:href="http://www.topicmaps.org/xtm/1.0/core.xtm#country"/>
    </subjectIdentity>

    <baseName>
      <baseNameString>Country</baseNameString>
    </baseName>    

    <occurrence>
      <instanceOf>
        <subjectIndicatorRef xlink:href="foo:occurrence-type"/>
      </instanceOf>
      <resourceRef xlink:href="http://www.country.org"/>
    </occurrence>

    <occurrence>
      <instanceOf>
        <subjectIndicatorRef xlink:href="foo:occurrence-type"/>
      </instanceOf>
      <scope><topicRef xlink:href="#norwegian"/></scope>
      <resourceRef xlink:href="http://www.country.no"/>
    </occurrence>
  </topic>

  <topic id="norwegian">
    <subjectIdentity>
      <subjectIndicatorRef xlink:href="http://www.topicmaps.org/xtm/1.0/core.xtm#no"/>
    </subjectIdentity>

    <baseName>
      <baseNameString>Norwegian</baseNameString>
    </baseName>
  </topic>

</topicMap>
