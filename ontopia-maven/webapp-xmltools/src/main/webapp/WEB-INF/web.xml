<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE web-app
          PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
          "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">

<web-app>

  <display-name>Free XML Tools</display-name>
  <description>
    A web site about free XML tools.
  </description>

  <context-param>
    <param-name>app_config</param-name>
    <param-value>../omnigator/WEB-INF/config/application.xml</param-value>
    <description>
      Tells the web application where to find the
      application configuration file.
    </description>
  </context-param>

  <session-config>
    <session-timeout>30</session-timeout>    
  </session-config>

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

</web-app>
